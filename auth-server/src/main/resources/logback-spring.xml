            <layout class="org.apache.skywalking.apm.toolkit.log.logback.v1.x.TraceIdPatternLogbackLayout">
                <pattern>${PATTERN_DEFAULT}</pattern>
            </layout>
        </encoder>
    </appender>-->

    <!-- Spring Security打印TRACE日志 方便观察过滤器链执行情况 -->
    <logger name="org.springframework.security" additivity="false" level="TRACE">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <!-- Mybatis SQL日志 -->
    <logger name="com.govacode.cloud.auth.repository" additivity="false" level="DEBUG">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC"/>
        <!--<appender-ref ref="KAFKA_ASYNC"/>-->
    </logger>

    <!-- 本地环境 -->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
    <!-- 其它环境 -->
    <springProfile name="test,stage,prod,default">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC"/>
            <appender-ref ref="KAFKA_ASYNC"/>
        </root>
    </springProfile>

</configuration>
